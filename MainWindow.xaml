<!-- MainWindow.xaml  (✅ 그대로 붙여넣기 OK) -->
<Window x:Class="ComeBackHome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ComeBackHome - Command Center"
        Width="1280" Height="760"
        MinWidth="1200" MinHeight="720"
        WindowStartupLocation="CenterScreen"
        Background="#0B1020">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D6E4FF"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#E8F1FF"/>
            <Setter Property="Background" Value="#16243E"/>
            <Setter Property="BorderBrush" Value="#2B3E6B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#D6E4FF"/>
            <Setter Property="BorderBrush" Value="#2B3E6B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border CornerRadius="14"
                                Background="#0F1A33"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Background="#13224A" CornerRadius="14,14,0,0" Padding="12,10">
                                    <TextBlock Text="{TemplateBinding Header}"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                </Border>

                                <ContentPresenter Grid.Row="1" Margin="10"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="#163A2A"/>
            <Setter Property="BorderBrush" Value="#2EE59D"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="PillWarn" TargetType="Border">
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#3B1F1F"/>
            <Setter Property="BorderBrush" Value="#FF3B3B"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Background" Value="#0F1A33"/>
            <Setter Property="BorderBrush" Value="#243A66"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style x:Key="CheckRowStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#0C1530"/>
            <Setter Property="BorderBrush" Value="#243A66"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">

        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#0A1330" BorderBrush="#22345E" BorderThickness="0,0,0,1" Height="72">
            <Grid Margin="18,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ComeBackHome" FontSize="22" FontWeight="Bold" Margin="0,0,12,0"/>
                    <TextBlock Text="| 관리자 관제 센터" FontSize="14" Foreground="#9DB7FF" VerticalAlignment="Bottom"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Border Style="{StaticResource BadgeStyle}" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#2EE59D" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="LIVE" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                    <TextBlock x:Name="TxtHeaderTime" Text="-" Foreground="#9DB7FF" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Body -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 3 Columns -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="330"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="380"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left -->
                    <GroupBox Grid.Column="0" Header="실시간 안전 현황 확인하기">
                        <StackPanel>

                            <Border CornerRadius="12" Background="#0C1530" BorderBrush="#243A66" BorderThickness="1" Padding="12" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="현장 인원 현황" Foreground="#9DB7FF"/>

                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="A구역 · 고소작업대" FontSize="14" FontWeight="SemiBold"/>
                                            <TextBlock Text="적정 2명 / 현재 1명" Foreground="#9DB7FF" Margin="0,4,0,0"/>
                                        </StackPanel>
                                        <Border Grid.Column="1" Style="{StaticResource PillWarn}" VerticalAlignment="Center">
                                            <TextBlock Text="인원부족" Foreground="#FFECEC" FontWeight="Bold"/>
                                        </Border>
                                    </Grid>

                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="B구역 · 사다리" FontSize="14" FontWeight="SemiBold"/>
                                            <TextBlock Text="적정 2명 / 현재 2명" Foreground="#9DB7FF" Margin="0,4,0,0"/>
                                        </StackPanel>
                                        <Border Grid.Column="1" Style="{StaticResource BadgeStyle}" VerticalAlignment="Center"
                                                Background="#163A2A" BorderBrush="#2EE59D">
                                            <TextBlock Text="정상" FontWeight="Bold"/>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <Button>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="🪜  사다리 작업   · 위험도: MED" VerticalAlignment="Center"/>
                                    <Border Grid.Column="1" Style="{StaticResource BadgeStyle}" Background="#0F2C2A" BorderBrush="#2EE59D">
                                        <TextBlock Text="2/2" FontWeight="Bold"/>
                                    </Border>
                                </Grid>
                            </Button>

                            <Button>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="🛗  고소작업대 작업 · 위험도: HIGH" VerticalAlignment="Center"/>
                                    <Border Grid.Column="1" Style="{StaticResource PillWarn}">
                                        <TextBlock Text="1/2" Foreground="#FFECEC" FontWeight="Bold"/>
                                    </Border>
                                </Grid>
                            </Button>

                            <Button>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="🧱  비계 작업       · 위험도: MED" VerticalAlignment="Center"/>
                                    <Border Grid.Column="1" Style="{StaticResource BadgeStyle}" Background="#0F2C2A" BorderBrush="#2EE59D">
                                        <TextBlock Text="2/2" FontWeight="Bold"/>
                                    </Border>
                                </Grid>
                            </Button>

                            <Border Margin="0,10,0,0" CornerRadius="12" Background="#0C1530" BorderBrush="#243A66" BorderThickness="1" Padding="12">
                                <StackPanel>
                                    <TextBlock Text="현재 선택:" Foreground="#9DB7FF"/>
                                    <TextBlock Text="(데모)" FontSize="16" FontWeight="Bold" Margin="0,4,0,0"/>
                                    <TextBlock Text="마지막 감지: -" Foreground="#9DB7FF" Margin="0,6,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Margin="0,10,0,0" CornerRadius="12" Background="#081028" BorderBrush="#243A66" BorderThickness="1" Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="오늘 누적 경고" Foreground="#9DB7FF"/>
                                        <TextBlock Text="7건" FontSize="20" FontWeight="Bold" Margin="0,4,0,0"/>
                                    </StackPanel>
                                    <Border Grid.Column="1" Style="{StaticResource PillWarn}" VerticalAlignment="Center">
                                        <TextBlock Text="HIGH" Foreground="#FFECEC" FontWeight="Bold"/>
                                    </Border>
                                </Grid>
                            </Border>

                        </StackPanel>
                    </GroupBox>

                    <!-- Center -->
                    <GroupBox Grid.Column="1" Header="CCTV 모니터링">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border CornerRadius="16" Background="#050A14" BorderBrush="#22345E" BorderThickness="1">
                                <Grid>
                                    <Image x:Name="ImgCctv"
                                           Stretch="Uniform"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>

                                    <!-- ✅ Image 위에 그대로 겹침 -->
                                    <Canvas x:Name="OverlayCanvas"
                                            IsHitTestVisible="False"/>

                                    <Border Background="#66000000" CornerRadius="10"
                                            HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                            Margin="12" Padding="10">
                                        <TextBlock x:Name="TxtCctvStatus"
                                                   Text="Ready"
                                                   Foreground="#9DB7FF"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <Grid Grid.Row="1" Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="채널:" Foreground="#9DB7FF" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="CmbChannel" Width="380"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="🤖 추론 실행" Margin="0,0,10,0" Click="BtnInfer_Click"/>
                                    <Button x:Name="BtnPlayStop" Content="⏯ 재생/정지" Margin="0,0,10,0" Click="BtnPlayStop_Click"/>
                                    <Button x:Name="BtnSnapshot" Content="📌 스냅샷 저장" Margin="0,0,10,0" Click="BtnSnapshot_Click"/>
                                    <Button x:Name="BtnAck" Content="✅ 경고 확인(Ack)" Click="BtnAck_Click"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </GroupBox>

                    <!-- Right -->
                    <GroupBox Grid.Column="2" Header="안전수칙 자동 점검">
                        <StackPanel>

                            <Border Style="{StaticResource CheckRowStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="안전모 착용" FontSize="15" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" Text="❗ NG" Foreground="#FF3B3B" FontWeight="Bold"/>
                                </Grid>
                            </Border>

                            <Border Style="{StaticResource CheckRowStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="안전대(하네스) 착용" FontSize="15" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" Text="❗ NG" Foreground="#FF3B3B" FontWeight="Bold"/>
                                </Grid>
                            </Border>

                            <Border Style="{StaticResource CheckRowStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="위험구역 이탈 여부" FontSize="15" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" Text="✅ OK" Foreground="#2EE59D" FontWeight="Bold"/>
                                </Grid>
                            </Border>

                            <Border Style="{StaticResource CheckRowStyle}">
                                <StackPanel>
                                    <TextBlock Text="알림 로그" FontSize="14" FontWeight="Bold" Margin="0,0,0,6"/>
                                    <Border Background="#081028" CornerRadius="10" Padding="10" BorderBrush="#243A66" BorderThickness="1">
                                        <StackPanel>
                                            <TextBlock Text="19:37:12  [경고] 안전모 미착용 감지" Foreground="#FFB3B3"/>
                                            <TextBlock Text="19:37:18  [경고] 안전대 미착용 감지" Foreground="#FFB3B3" Margin="0,4,0,0"/>
                                            <TextBlock Text="19:37:40  [정상] 위험구역 이탈 없음" Foreground="#9DB7FF" Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource CheckRowStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="월간 리포트" FontSize="14" FontWeight="Bold"/>
                                    <Button Grid.Column="1" Content="📄 내보내기" Margin="0" Padding="10,6" IsEnabled="False"/>
                                </Grid>
                            </Border>

                        </StackPanel>
                    </GroupBox>

                </Grid>

                <!-- Bottom -->
                
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="월간 경고 건수" Foreground="#9DB7FF"/>
                            <TextBlock Text="38" FontSize="34" FontWeight="Bold" Margin="0,6,0,0"/>
                            <TextBlock Text="지난달 대비 +12" Foreground="#FFB3B3" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="작업 유형별 경고 비율" Foreground="#9DB7FF"/>
                            <TextBlock Text="고소작업대 45% · 사다리 34% · 비계 21%" FontSize="14" Margin="0,8,0,0"/>
                            <TextBlock Text="(차트는 다음 단계에서 붙이자)" Foreground="#6F86C8" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="위반 TOP 3" Foreground="#9DB7FF"/>
                            <TextBlock Text="1) 안전모 미착용 42%" Margin="0,8,0,0" Foreground="#FFB3B3"/>
                            <TextBlock Text="2) 안전대 미착용 31%" Margin="0,4,0,0" Foreground="#FFB3B3"/>
                            <TextBlock Text="3) 위험구역 접근 19%" Margin="0,4,0,0" Foreground="#FFB3B3"/>
                        </StackPanel>
                    </Border>
                </Grid>

            </Grid>
        </ScrollViewer>
    </DockPanel>
</Window>
