<Window x:Class="ComeBackHome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ComeBackHome - Command Center"
        Width="1280" Height="760"
        MinWidth="1200" MinHeight="720"
        WindowStartupLocation="CenterScreen"
        Background="#0B1020">

    <Window.Resources>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D6E4FF"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#E8F1FF"/>
            <Setter Property="Background" Value="#16243E"/>
            <Setter Property="BorderBrush" Value="#2B3E6B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,10,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#D6E4FF"/>
            <Setter Property="BorderBrush" Value="#2B3E6B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border CornerRadius="14"
                                Background="#0F1A33"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Background="#13224A"
                                        CornerRadius="14,14,0,0"
                                        Padding="12,10">
                                    <TextBlock Text="{TemplateBinding Header}"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                </Border>

                                <ContentPresenter Grid.Row="1" Margin="10"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="#163A2A"/>
            <Setter Property="BorderBrush" Value="#2EE59D"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="CheckRowStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#0C1530"/>
            <Setter Property="BorderBrush" Value="#243A66"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="MiniBtn" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="StatusBarStyle" TargetType="Border">
            <Setter Property="Background" Value="#0A1330"/>
            <Setter Property="BorderBrush" Value="#22345E"/>
            <Setter Property="BorderThickness" Value="1,1,1,0"/>
            <Setter Property="Padding" Value="14,10"/>
        </Style>

    </Window.Resources>

    <DockPanel LastChildFill="True">

        <Border DockPanel.Dock="Top"
                Background="#0A1330"
                BorderBrush="#22345E"
                BorderThickness="0,0,0,1"
                Height="72">
            <Grid Margin="18,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ComeBackHome"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="0,0,12,0"/>
                    <TextBlock Text="| 관리자 관제 센터"
                               FontSize="14"
                               Foreground="#9DB7FF"
                               VerticalAlignment="Bottom"/>
                </StackPanel>
                <StackPanel Grid.Column="1"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            HorizontalAlignment="Right">

                    <Button x:Name="BtnOpenCvMode" 
            Content="🔍 OpenCV 분석" 
            Click="BtnOpenCvMode_Click"
            Background="#22345E"
            BorderBrush="#4A5A8E"
            Width="120"
            Height="34" 
            FontSize="12"
            Margin="0,0,12,0"
            Padding="8,6"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center" 
            HorizontalContentAlignment="Center"/>

                    <Border Style="{StaticResource BadgeStyle}" Margin="0,0,10,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8"
                     Fill="#2EE59D"
                     VerticalAlignment="Center"
                     Margin="0,0,8,0"/>
                            <TextBlock Text="LIVE" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <TextBlock x:Name="TxtHeaderTime"
               Text="-"
               Foreground="#9DB7FF"
               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border DockPanel.Dock="Bottom" Style="{StaticResource StatusBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="🛈 일괄 로그"
                           Foreground="#9DB7FF"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>

                <TextBlock x:Name="TxtBottomLog"
                           Grid.Column="1"
                           Text="(로그 없음)"
                           TextWrapping="NoWrap"
                           TextTrimming="CharacterEllipsis"
                           Foreground="#D6E4FF"
                           VerticalAlignment="Center"/>

                <Button x:Name="BtnAckBottom"
                        Grid.Column="2"
                        Content="ACK"
                        Width="90"
                        Margin="12,0,0,0"
                        Padding="10,6"
                        Click="BtnAck_Click"/>
            </Grid>
        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="330"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="실시간 작업현장 확인하기">
                <StackPanel>

                    <Border CornerRadius="12"
                            Background="#0C1530"
                            BorderBrush="#243A66"
                            BorderThickness="1"
                            Padding="12"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="현장 작업 구역"
                                       Foreground="#9DB7FF"/>

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="A구역 · 고소작업대 작업"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>

                                <Button x:Name="BtnSelectA"
                                        Grid.Column="1"
                                        Content="선택"
                                        Width="84"
                                        Padding="10,6"
                                        Margin="0"
                                        Click="BtnSelectA_Click"/>
                            </Grid>

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="B구역 · 사다리 작업"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>

                                <Button x:Name="BtnSelectB"
                                        Grid.Column="1"
                                        Content="선택"
                                        Width="84"
                                        Padding="10,6"
                                        Margin="0"
                                        Click="BtnSelectB_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border CornerRadius="12"
                            Background="#0C1530"
                            BorderBrush="#243A66"
                            BorderThickness="1"
                            Padding="12"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="현재 모니터링:"
                                       Foreground="#9DB7FF"/>
                            <TextBlock x:Name="TxtSelectedWork"
                                       Text="-"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="0,6,0,0"/>
                            <TextBlock x:Name="TxtLastDetectTime"
                                       Text="마지막 감지: -"
                                       Foreground="#9DB7FF"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border CornerRadius="12"
                            Background="#081028"
                            BorderBrush="#243A66"
                            BorderThickness="1"
                            Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="오늘 누적 경고" Foreground="#9DB7FF"/>
                                <TextBlock x:Name="TxtWarnToday"
                                           Text="0건"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Margin="0,6,0,0"/>
                            </StackPanel>
                            <Border Grid.Column="1"
                                    Style="{StaticResource BadgeStyle}"
                                    VerticalAlignment="Center">
                                <TextBlock x:Name="TxtWarnLevel"
                                           Text="LIVE"
                                           FontWeight="Bold"/>
                            </Border>
                        </Grid>
                    </Border>

                </StackPanel>
            </GroupBox>

            <GroupBox Grid.Column="1" Header="CCTV 모니터링">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border CornerRadius="16"
                            Background="#050A14"
                            BorderBrush="#22345E"
                            BorderThickness="1">
                        <Grid>
                            <Grid x:Name="VideoHost"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                                <Image x:Name="ImgCctv"
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <Canvas x:Name="OverlayCanvas"
                                        IsHitTestVisible="False"/>
                            </Grid>

                            <Border Background="#66000000"
                                    CornerRadius="10"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    Margin="12"
                                    Padding="10">
                                <TextBlock x:Name="TxtCctvStatus"
                                           Text="Ready"
                                           Foreground="#9DB7FF"/>
                            </Border>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1" Margin="0,12,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                CornerRadius="12"
                                Background="#081028"
                                BorderBrush="#22345E"
                                BorderThickness="1"
                                Padding="10"
                                Margin="0,0,0,8">
                            <WrapPanel VerticalAlignment="Center">
                                <TextBlock Text="트래커:" Foreground="#9DB7FF" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox x:Name="CmbTrackerType"
                                          Width="180"
                                          SelectionChanged="CmbTrackerType_SelectionChanged">
                                    <ComboBoxItem Content="CSRT"/>
                                    <ComboBoxItem Content="KCF"/>
                                    <ComboBoxItem Content="MIL"/>
                                </ComboBox>

                                <CheckBox x:Name="ChkTracking"
                                          Content="Tracking ON"
                                          IsChecked="True"
                                          Margin="18,0,0,0"
                                          VerticalAlignment="Center"
                                          Foreground="#9DB7FF"/>
                            </WrapPanel>
                        </Border>

                        <WrapPanel Grid.Row="1" HorizontalAlignment="Right">
                            <Button Style="{StaticResource MiniBtn}" x:Name="BtnPlayStop" Content="⏯ 재생/정지" Click="BtnPlayStop_Click"/>
                            <Button Style="{StaticResource MiniBtn}" x:Name="BtnSnapshot" Content="📌 스냅샷 저장" Click="BtnSnapshot_Click"/>
                            <Button Style="{StaticResource MiniBtn}" x:Name="BtnBench" Content="🧪 벤치(300f) → CSV" Click="BtnBench_Click"/>
                        </WrapPanel>
                    </Grid>
                </Grid>
            </GroupBox>

            <GroupBox Grid.Column="2" Header="안전수칙 자동 점검">
                <StackPanel>

                    <Border Style="{StaticResource CheckRowStyle}">
                        <StackPanel>
                            <TextBlock Text="탐지 요약"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"/>

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="현재 인원 수:" Foreground="#9DB7FF"/>
                                <TextBlock x:Name="TxtPeopleSummary"
                                           Grid.Column="1"
                                           Text="0 / 2"
                                           FontWeight="Bold"
                                           Margin="10,0,0,0"/>
                            </Grid>

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="안전모 착용:" Foreground="#9DB7FF"/>
                                <TextBlock x:Name="TxtHelmetSummary"
                                           Grid.Column="1"
                                           Text="(미착용)"
                                           FontWeight="Bold"
                                           Margin="10,0,0,0"/>
                            </Grid>

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="하네스 착용:" Foreground="#9DB7FF"/>
                                <TextBlock x:Name="TxtHarnessSummary"
                                           Grid.Column="1"
                                           Text="(미착용)"
                                           FontWeight="Bold"
                                           Margin="10,0,0,0"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="미설치물 여부:" Foreground="#9DB7FF"/>
                                <TextBlock x:Name="TxtUcSummary"
                                           Grid.Column="1"
                                           Text="-"
                                           FontWeight="Bold"
                                           Margin="10,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource CheckRowStyle}">
                        <StackPanel>
                            <TextBlock Text="위험도"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,0,0,6"/>
                            <TextBlock x:Name="TxtRiskSummary"
                                       Text="정상"
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock x:Name="TxtRiskDetail"
                                       Text="(비정상 0건)"
                                       Foreground="#9DB7FF"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource CheckRowStyle}">
                        <StackPanel>
                            <TextBlock Text="작업 리포트"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,0,0,6"/>
                            <Button x:Name="BtnReport"
                                    Content="📄 Excel 리포트 저장"
                                    Margin="0"
                                    Padding="10,8"
                                    IsEnabled="False"/>
                            <TextBlock Text="※ 비정상 내역을 작업 종료 시 Excel로 저장"
                                       Foreground="#6F86C8"
                                       Margin="0,6,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource CheckRowStyle}">
                        <StackPanel>
                            <TextBlock Text="최근 알림"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,0,0,6"/>
                            <TextBlock x:Name="TxtAlertLog"
                                       Text="(로그 없음)"
                                       Foreground="#9DB7FF"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </GroupBox>

        </Grid>
    </DockPanel>
</Window>